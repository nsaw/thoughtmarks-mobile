{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native",
    "types": ["jest", "react", "react-native", "node"],
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@nextgen/*": ["src-nextgen/*"]
    }
  },
  "include": [
    "src-nextgen/types/react-native-augment.d.ts",
    "src-nextgen/types/react-native-shims.d.ts",
    "src",
    "src-nextgen",
    "scripts",
    "__tests__",
    "src-nextgen/__tests__"
  ]
} 