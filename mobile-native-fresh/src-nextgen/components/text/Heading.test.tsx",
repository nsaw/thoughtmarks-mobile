import React from 'react';
import { View, Text } from 'react-native';
import { render, fireEvent } from '@/__tests__/helpers/test-utils';
import { Heading } from './Heading';

describe('Heading', () => {
  beforeEach(() => {
    require('@/__tests__/helpers/test-utils').resetAllMocks();
  });

  it('should render heading with level 1', () => {
    const { getByText } = render(
      <Heading level={1}><Text>Main Heading</Text></Heading>
    );
    expect(getByText('Main Heading')).toBeDefined();
  });

  it('should render heading with level 2', () => {
    const { getByText } = render(
      <Heading level={2}><Text>Sub Heading</Text></Heading>
    );
    expect(getByText('Sub Heading')).toBeDefined();
  });

  it('should render heading with custom weight', () => {
    const { getByText } = render(
      <Heading level={1} weight="medium"><Text>Custom Weight</Text></Heading>
    );
    expect(getByText('Custom Weight')).toBeDefined();
  });

  it('should render heading with custom color', () => {
    const { getByText } = render(
      <Heading level={1} color="secondary"><Text>Custom Color</Text></Heading>
    );
    expect(getByText('Custom Color')).toBeDefined();
  });

  it('should apply correct styles based on level', () => {
    const { getByText } = render(
      <Heading level={1}><Text>Test Heading</Text></Heading>
    );
    const heading = getByText('Test Heading');
    expect(heading).toBeDefined();
  });

  it('should handle accessibility props', () => {
    const { getByText } = render(
      <Heading 
        level={1} 
        accessible={true}
        accessibilityLabel="Main heading"
      >
        <Text>Accessible Heading</Text>
      </Heading>
    );
    expect(getByText('Accessible Heading')).toBeDefined();
  });
}); 