{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true,
    "lib": ["DOM", "ESNext"],
    "moduleDetection": "force",
    "customConditions": ["react-native"],
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": ["src", "app"],
  "exclude": ["tm-mobile-clone/**/*", "reference/**/*", "ios bak/**/*", "node_modules"]
}
